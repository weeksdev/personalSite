@page
@model PersonalSite.Api.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid p-0">
    <!-- Section One: Hero -->
    <section id="sectionOne" class="py-5 text-center bg-light">
        <div class="container">
            <h1 class="display-4">Andrew Weeks</h1>
            <p class="lead">Web App, Data, & MiddleWare Development</p>
            <p>
                <a href="mailto:adweeks@gmail.com" class="btn btn-primary my-2">Connect via Email</a>
                <a href="https://github.com/weeksdev" class="btn btn-secondary my-2" target="_blank">GitHub</a>
                <a href="http://www.linkedin.com/pub/andrew-weeks/7/337/12a" class="btn btn-info my-2" target="_blank">LinkedIn</a>
                <a href="http://stackoverflow.com/users/1975259/weeksdev#" class="btn btn-warning my-2" target="_blank">Stack Overflow</a>
            </p>
        </div>
    </section>

    <!-- Section Two: Stats & Skills -->
    <section id="sectionTwo" class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Stats & Skills</h2>
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Primary Skills</h5>
                            <p class="card-text">A visual representation of skill distribution (ChartJS placeholder).</p>
                            <canvas id="skillsChart" width="400" height="200"></canvas>
                            <p class="card-text mt-2">Note: Chart functionality (from original site's Chart.js) needs to be re-integrated.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Other Development Experience</h5>
                            <ul>
                                <li>WPF/XBAP/Silverlight</li>
                                <li>ASP.NET (Web Forms, MVC)</li>
                                <li>VBA, VBScript</li>
                                <li>RDBMS (MS SQL Server, Postgres, Netezza, Intersystems Cache)</li>
                                <li>Various JavaScript frameworks (jQuery, ExtJS, etc.)</li>
                            </ul>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Financial Domain Experience</h5>
                            <ul>
                                <li>Securities Events & Corporate Actions</li>
                                <li>Alternative Investments</li>
                                <li>ACATS (Automated Customer Account Transfer Service)</li>
                                <li>Risk Data Analysis & Modeling</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Three: Projects Intro (Simplified) -->
    <section id="sectionThree" class="py-5 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="display-5">Hi.</h2>
                    <p class="lead">Welcome to my personal site. Here you'll find information about my experience and projects.</p>
                    <p><em>foreach(var proj in projects) { proj.submit(); }</em></p>
                    <a asp-page="/Projects" class="btn btn-success">View My Projects</a>
                </div>
                <div class="col-md-6">
                    <div class="card">
                         <img src="~/images/coloradoAppSS1.png" class="card-img-top" alt="Colorado County App Screenshot" style="object-fit: contain; max-height: 300px;"/>
                        <div class="card-body">
                            <h5 class="card-title">Featured Project: Colorado County App</h5>
                            <p class="card-text">An ExtJS demo application showcasing data visualization for Colorado counties.</p>
                            <a href="http://andrewweeks.hopto.org/Web/WorkSpace/ExtJSCountyDemoApp/" class="btn btn-sm btn-outline-primary" target="_blank">Visit Site</a>
                            @* Link to GitHub for this specific project if available, otherwise remove or link to general GitHub *@
                            @* <a href="#" class="btn btn-sm btn-outline-secondary">GitHub</a> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Basic Chart.js placeholder for skillsChart
        // Actual data and options need to be ported from the original Main.js or redefined.
        const skillsCtx = document.getElementById('skillsChart');
        if (skillsCtx) {
            new Chart(skillsCtx, {
                type: 'doughnut', // Or 'bar', 'pie', etc. as in original
                data: {
                    labels: ['C#/.NET', 'JavaScript', 'SQL', 'HTML/CSS', 'Python', 'Other'],
                    datasets: [{
                        label: 'Skill Distribution',
                        data: [35, 25, 20, 10, 5, 5], // Example data
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 206, 86, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(153, 102, 255, 0.7)',
                            'rgba(255, 159, 64, 0.7)'
                        ],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        }
    </script>
}
